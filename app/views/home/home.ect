                                      <div class="modal-body">
                                          <form  class="form-horizontal newmess" method="post" action="/user/message">
                                              <div class="form-group">

                                                  <label class="col-lg-2" style="padding-top: 10px;">To</label>
                                                  <div class="col-lg-10">
                                                      <input type="text" placeholder="Enter..." name="emailto" data-role="tagsinput">
                                                  </div>
                                              </div>

                                              <div class="form-group">
                                                  <label class="col-lg-2 ">Message</label>
                                                  <div class="col-lg-10">
                                                      <textarea rows="10" cols="30" class="form-control" name="messcontent"></textarea>
                                                  </div>
                                              </div>

                                              <div class="form-group">

                                                  <div class="col-lg-offset-2 col-lg-10">
                                                  
                                                      <span class="btn green fileinput-button">
                                                        <i class="fa fa-plus fa fa-white"></i>
                                                        <span>Attachment</span>
                                                        <input type="file" name="files[]" multiple="">
                                                      </span>
                                                        
                                                      <button class="btn btn-send" type="submit">Send</button>
                                                  </div>
                                              </div>
                                          </form>
                                      </div> <!--end compost show-->

                                  </div><!-- /.modal-content -->
